@model  IEnumerable<BBMS1.Models.BloodStock>
@{
    ViewBag.Title = "BloodStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        font-family: Arial,sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    table {
        width: 100%;
        
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: chartreuse;
        color: black;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
</style>
<h2>BloodStock Details</h2>
<table class="table">
    <tr>
        <th>Blood Type</th>
        <th>Packet Count</th>

    </tr>
    @foreach (var stock in Model)
    {
        <tr>
            <td>@stock.BloodType</td>
            <td>@stock.PacketCount</td>

        </tr>
    }
</table>
@Html.ActionLink("Cancel","UserDashboard","Login")

