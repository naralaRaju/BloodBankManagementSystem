@model BBMS1.Models.AdminLogin
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        text-align: center;
    }
    .full-height {
        background-image: url("https://wallpapercave.com/wp/wp7897950.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }

    .mb-3 {
        background-color: aquamarine;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        max-width: 300px;
        
    }


        .mb-3 input[type="text"],
        .mb-3 input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ff0000
        }

    .form-wrapper {
        margin: 0 auto;
        width: 340px;
    }
</style>
<body>
    <h2>Admin</h2>
    <div class="form-wrapper">

        @using (Html.BeginForm("SignIn", "Admin", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input type="submit" class="btn btn-primary" value="SignIn" />
            @Html.ActionLink("Cancel", "Login", "Login")
        }
    </div>
</body>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-summary">
            <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
        </div>
    }
