@model BBMS1.Models.Patients
@{
    ViewBag.Title = "DeletePatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Delete Patient</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name:</dt>
        <dd>@Model.Name</dd>
        <dt>Age:</dt>
        <dd>@Model.Age</dd>
        <dt>Phone Number:</dt>
        <dd>@Model.PhoneNo</dd>
        <dt>Gender:</dt>
        <dd>@Model.Gender</dd>
        <dt>Blood Group:</dt>
        <dd>@Model.BloodGroup</dd>
        <dt>Address:</dt>
        <dd>@Model.Address</dd>
    </dl>
    @using (Html.BeginForm("Remove", "Login"))
    {
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-danger">Remove</button>
    }
    @Html.ActionLink("Cancel", "Patients", "Login")
</div>


