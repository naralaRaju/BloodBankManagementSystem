@model BBMS1.Models.UserModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-image: url('C:\Users\2321983\OneDrive - Cognizant\Pictures\Saved Pictures\bloodbank.webp');
        font-family: Arial,sans-serif;
        margin: 0;
        padding: 0;
        background-size: cover;
        height: 100vh;
        text-align: center;
    }

    .full-height {
        background-image: url("https://wallpapercave.com/wp/wp7897950.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }
    .mb-3 {
        background-color: aquamarine;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.1);
        max-width: 300px;
        
        
    }

        .mb-3 input[type="text"],
        .mb-3 input[type="password"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid;
        }
    form-control {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        flex-direction: column;
    }
    .form-wrapper{
        margin: 0 auto;
        width: 340px;
    }
</style>
<h2>Employee Login</h2>
@if(Model==null)
{
<body>
    <div class="form-wrapper">
        @using (Html.BeginForm("Create", "Login"))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input type="submit" class="btn btn-primary" value="Login" />
            @Html.AntiForgeryToken()
            @Html.ActionLink("Continue as Admin", "Admin", "Admin")

        }
    </div>
</body>
    }

@if (!ViewData.ModelState.IsValid)
{
    <div class="error-summary">
        <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
    </div>
}
