@model BBMS1.Models.Patients
@{
    ViewBag.Title = "EditPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Patient</h2>

@using (Html.BeginForm("SaveChange", "Login"))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id)
    <div class="mb-3">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Age)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.PhoneNo)
        @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PhoneNo)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Gender)
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gender)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.BloodGroup)
        @Html.TextBoxFor(m => m.BloodGroup, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BloodGroup)
    </div>
    <div class="mb-3">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address)
    </div>
    <button type="submit" class="btn btn-primary"> SaveChange</button>
}